{
  "manifest_version": 3,
  "name": "AutoCart Assistant Pro",
  "version": "1.0.0",
  "description": "Advanced automation framework for my own shopping app",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.sheinindia.in/*",
    "https://payment.sheinindia.in/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.sheinindia.in/*",
        "https://payment.sheinindia.in/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoCart Assistant Pro"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
